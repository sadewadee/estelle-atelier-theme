<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">
    <link rel="canonical" href="{{ canonical_url }}">

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- if page_title != shop.name %} &ndash; {{ shop.name }}{% endif -%}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {{ content_for_header }}

    {%- liquid
      assign header_font = settings.type_header_font
      assign body_font = settings.type_body_font
      assign heading_font_bold = header_font | font_modify: 'weight', '+100'
      assign body_font_bold = body_font | font_modify: 'weight', 'bold'
      assign body_font_italic = body_font | font_modify: 'style', 'italic'
      assign body_font_bold_italic = body_font_bold | font_modify: 'style', 'italic'
    -%}

    <link rel="preload" href="{{ header_font | font_url }}" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="{{ body_font | font_url }}" as="font" type="font/woff2" crossorigin>

    {%- if heading_font_bold -%}
      <link rel="preload" href="{{ heading_font_bold | font_url }}" as="font" type="font/woff2" crossorigin>
    {%- endif -%}
    {%- if body_font_bold -%}
      <link rel="preload" href="{{ body_font_bold | font_url }}" as="font" type="font/woff2" crossorigin>
    {%- endif -%}

    <style>
      {{ header_font | font_face: font_display: 'swap' }}
      {{ body_font | font_face: font_display: 'swap' }}

      {%- if heading_font_bold -%}
        {{ heading_font_bold | font_face: font_display: 'swap' }}
      {%- endif -%}
      {%- if body_font_bold -%}
        {{ body_font_bold | font_face: font_display: 'swap' }}
      {%- endif -%}
      {%- if body_font_italic -%}
        {{ body_font_italic | font_face: font_display: 'swap' }}
      {%- endif -%}
      {%- if body_font_bold_italic -%}
        {{ body_font_bold_italic | font_face: font_display: 'swap' }}
      {%- endif -%}

      :root {
        {%- comment -%} Typography {%- endcomment -%}
        --font-heading-family: {{ header_font.family }}, {{ header_font.fallback_families }};
        --font-heading-weight: {{ header_font.weight }};
        --font-heading-style: {{ header_font.style }};
        --font-heading-scale: {{ settings.heading_scale | divided_by: 100.0 }};

        --font-body-family: {{ body_font.family }}, {{ body_font.fallback_families }};
        --font-body-weight: {{ body_font.weight }};
        --font-body-style: {{ body_font.style }};
        --font-body-scale: {{ settings.body_scale | divided_by: 100.0 }};

        --font-base-size: {{ settings.type_base_size | default: 16 }}px;

        {%- comment -%} Estelle Atelier Sage/Olive Palette {%- endcomment -%}
        --color-sage-pale: {{ settings.color_sage_pale | default: '#f1f4f0' }};
        --color-sage-accent: {{ settings.color_sage_accent | default: '#e1e8df' }};
        --color-sage-dark: {{ settings.color_sage_dark | default: '#8ba888' }};
        --color-olive-deep: {{ settings.color_olive_deep | default: '#3c443b' }};
        --color-text-muted: {{ settings.color_text_muted | default: '#717c70' }};
        --color-border-light: {{ settings.color_border_light | default: '#ecefe9' }};

        {%- comment -%} Legacy color variables (for backward compatibility) {%- endcomment -%}
        --color-background: {{ settings.color_background | default: '#ffffff' }};
        --color-text-charcoal: {{ settings.color_text | default: '#2d312d' }};
        --color-text-olive-deep: {{ settings.color_olive_deep | default: '#3c443b' }};

        {%- comment -%} Animation settings {%- endcomment -%}
        --animations-reveal-on-scroll: {% if settings.animations_reveal_on_scroll %}1{% else %}0{% endif %};
        --animations-hover-elements: {{ settings.animations_hover_elements | default: 'default' }};

        {%- comment -%} Border radius {%- endcomment -%}
        --buttons-radius: {{ settings.buttons_radius | default: 8 }}px;
        --buttons-border-width: {{ settings.buttons_border_thickness | default: 0 }}px;
        --buttons-border-opacity: {{ settings.buttons_border_opacity | default: 100 | divided_by: 100.0 }};

        --inputs-radius: {{ settings.inputs_radius | default: 4 }}px;
        --inputs-border-width: {{ settings.inputs_border_thickness | default: 1 }}px;
        --inputs-border-opacity: {{ settings.inputs_border_opacity | default: 55 | divided_by: 100.0 }};

        --variant-pills-radius: {{ settings.variant_pills_radius | default: 40 }}px;
        --variant-pills-border-width: {{ settings.variant_pills_border_thickness | default: 1 }}px;
        --variant-pills-border-opacity: {{ settings.variant_pills_border_opacity | default: 55 | divided_by: 100.0 }};

        --card-radius: {{ settings.card_corner_radius | default: 8 }}px;
        --card-border-width: {{ settings.card_border_thickness | default: 0 }}px;
        --card-border-opacity: {{ settings.card_border_opacity | default: 20 | divided_by: 100.0 }};

        --collection-card-radius: {{ settings.collection_card_corner_radius | default: 8 }}px;
        --collection-card-border-width: {{ settings.collection_card_border_thickness | default: 0 }}px;
        --collection-card-border-opacity: {{ settings.collection_card_border_opacity | default: 20 | divided_by: 100.0 }};

        --blog-card-radius: {{ settings.blog_card_corner_radius | default: 8 }}px;
        --blog-card-border-width: {{ settings.blog_card_border_thickness | default: 0 }}px;
        --blog-card-border-opacity: {{ settings.blog_card_border_opacity | default: 20 | divided_by: 100.0 }};

        --text-boxes-radius: {{ settings.text_boxes_radius | default: 8 }}px;
        --text-boxes-border-width: {{ settings.text_boxes_border_thickness | default: 0 }}px;
        --text-boxes-border-opacity: {{ settings.text_boxes_border_opacity | default: 20 | divided_by: 100.0 }};

        --media-radius: {{ settings.media_radius | default: 4 }}px;
        --media-border-width: {{ settings.media_border_thickness | default: 0 }}px;
        --media-border-opacity: {{ settings.media_border_opacity | default: 5 | divided_by: 100.0 }};

        --popup-radius: {{ settings.popup_corner_radius | default: 8 }}px;
        --popup-border-width: {{ settings.popup_border_thickness | default: 0 }}px;
        --popup-border-opacity: {{ settings.popup_border_opacity | default: 10 | divided_by: 100.0 }};

        --badge-radius: {{ settings.badge_corner_radius | default: 20 }}px;
        --badge-position: {{ settings.badge_position | default: 'bottom left' }};

        {%- comment -%} Page width {%- endcomment -%}
        --page-width: {{ settings.page_width | default: 1400 }}px;
        --page-width-margin: {% if settings.page_width > 1400 %}5{% else %}2{% endif %}rem;

        {%- comment -%} Spacing {%- endcomment -%}
        --spacing-sections: {{ settings.spacing_sections | default: 0 }}px;
        --spacing-grid-horizontal: {{ settings.spacing_grid_horizontal | default: 12 }}px;
        --spacing-grid-vertical: {{ settings.spacing_grid_vertical | default: 12 }}px;

        {%- comment -%} Shadow values {%- endcomment -%}
        --buttons-shadow-opacity: {{ settings.buttons_shadow_opacity | default: 0 | divided_by: 100.0 }};
        --buttons-shadow-horizontal-offset: {{ settings.buttons_shadow_horizontal_offset | default: 0 }}px;
        --buttons-shadow-vertical-offset: {{ settings.buttons_shadow_vertical_offset | default: 4 }}px;
        --buttons-shadow-blur: {{ settings.buttons_shadow_blur | default: 10 }}px;

        --inputs-shadow-opacity: {{ settings.inputs_shadow_opacity | default: 0 | divided_by: 100.0 }};
        --inputs-shadow-horizontal-offset: {{ settings.inputs_shadow_horizontal_offset | default: 0 }}px;
        --inputs-shadow-vertical-offset: {{ settings.inputs_shadow_vertical_offset | default: 0 }}px;
        --inputs-shadow-blur: {{ settings.inputs_shadow_blur | default: 0 }}px;

        --variant-pills-shadow-opacity: {{ settings.variant_pills_shadow_opacity | default: 0 | divided_by: 100.0 }};
        --variant-pills-shadow-horizontal-offset: {{ settings.variant_pills_shadow_horizontal_offset | default: 0 }}px;
        --variant-pills-shadow-vertical-offset: {{ settings.variant_pills_shadow_vertical_offset | default: 0 }}px;
        --variant-pills-shadow-blur: {{ settings.variant_pills_shadow_blur | default: 0 }}px;

        --card-shadow-opacity: {{ settings.card_shadow_opacity | default: 10 | divided_by: 100.0 }};
        --card-shadow-horizontal-offset: {{ settings.card_shadow_horizontal_offset | default: 0 }}px;
        --card-shadow-vertical-offset: {{ settings.card_shadow_vertical_offset | default: 4 }}px;
        --card-shadow-blur: {{ settings.card_shadow_blur | default: 15 }}px;

        --collection-card-shadow-opacity: {{ settings.collection_card_shadow_opacity | default: 10 | divided_by: 100.0 }};
        --collection-card-shadow-horizontal-offset: {{ settings.collection_card_shadow_horizontal_offset | default: 0 }}px;
        --collection-card-shadow-vertical-offset: {{ settings.collection_card_shadow_vertical_offset | default: 4 }}px;
        --collection-card-shadow-blur: {{ settings.collection_card_shadow_blur | default: 15 }}px;

        --blog-card-shadow-opacity: {{ settings.blog_card_shadow_opacity | default: 10 | divided_by: 100.0 }};
        --blog-card-shadow-horizontal-offset: {{ settings.blog_card_shadow_horizontal_offset | default: 0 }}px;
        --blog-card-shadow-vertical-offset: {{ settings.blog_card_shadow_vertical_offset | default: 4 }}px;
        --blog-card-shadow-blur: {{ settings.blog_card_shadow_blur | default: 15 }}px;

        --text-boxes-shadow-opacity: {{ settings.text_boxes_shadow_opacity | default: 0 | divided_by: 100.0 }};
        --text-boxes-shadow-horizontal-offset: {{ settings.text_boxes_shadow_horizontal_offset | default: 0 }}px;
        --text-boxes-shadow-vertical-offset: {{ settings.text_boxes_shadow_vertical_offset | default: 0 }}px;
        --text-boxes-shadow-blur: {{ settings.text_boxes_shadow_blur | default: 0 }}px;

        --media-shadow-opacity: {{ settings.media_shadow_opacity | default: 0 | divided_by: 100.0 }};
        --media-shadow-horizontal-offset: {{ settings.media_shadow_horizontal_offset | default: 0 }}px;
        --media-shadow-vertical-offset: {{ settings.media_shadow_vertical_offset | default: 0 }}px;
        --media-shadow-blur: {{ settings.media_shadow_blur | default: 0 }}px;

        --popup-shadow-opacity: {{ settings.popup_shadow_opacity | default: 30 | divided_by: 100.0 }};
        --popup-shadow-horizontal-offset: {{ settings.popup_shadow_horizontal_offset | default: 0 }}px;
        --popup-shadow-vertical-offset: {{ settings.popup_shadow_vertical_offset | default: 8 }}px;
        --popup-shadow-blur: {{ settings.popup_shadow_blur | default: 20 }}px;

        --drawer-shadow-opacity: {{ settings.drawer_shadow_opacity | default: 20 | divided_by: 100.0 }};
        --drawer-shadow-horizontal-offset: {{ settings.drawer_shadow_horizontal_offset | default: -8 }}px;
        --drawer-shadow-vertical-offset: {{ settings.drawer_shadow_vertical_offset | default: 0 }}px;
        --drawer-shadow-blur: {{ settings.drawer_shadow_blur | default: 25 }}px;

        {%- comment -%} Card styles {%- endcomment -%}
        --card-style: {{ settings.card_style | default: 'standard' }};
        --card-text-alignment: {{ settings.card_text_alignment | default: 'left' }};
        --collection-card-style: {{ settings.collection_card_style | default: 'standard' }};
        --collection-card-text-alignment: {{ settings.collection_card_text_alignment | default: 'left' }};
        --blog-card-style: {{ settings.blog_card_style | default: 'standard' }};
        --blog-card-text-alignment: {{ settings.blog_card_text_alignment | default: 'left' }};

        {%- comment -%} Cart settings {%- endcomment -%}
        --cart-type: {{ settings.cart_type | default: 'drawer' }};
      }

      html {
        font-size: var(--font-base-size);
      }

      {%- if settings.animations_reveal_on_scroll -%}
        [data-animate] {
          opacity: 0;
          transform: translateY(30px);
          transition: opacity 0.8s cubic-bezier(0.2, 0.8, 0.2, 1),
                      transform 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
        }

        [data-animate].is-animated {
          opacity: 1;
          transform: translateY(0);
        }
      {%- endif -%}
    </style>

    {{ 'custom.css' | asset_url | stylesheet_tag }}

    <!-- Scripts for global functionality -->
    <script src="{{ 'animations.js' | asset_url }}" defer></script>
    <script src="{{ 'pubsub.js' | asset_url }}" defer></script>
    <script src="{{ 'cart-drawer.js' | asset_url }}" defer></script>
    <script src="{{ 'recently-viewed.js' | asset_url }}" defer></script>

    {%- if settings.predictive_search_enabled -%}
      <script src="{{ 'predictive-search.js' | asset_url }}" defer></script>
    {%- endif -%}
  </head>

  <body class="bg-white antialiased{% if settings.animations_reveal_on_scroll %} animations-reveal-on-scroll{% endif %}">
    <div class="loading-bar"></div>
    <div class="relative flex h-auto min-h-screen w-full flex-col overflow-x-hidden">
      {% section 'announcement-bar' %}
      {% section 'header' %}

      <main class="grow flex flex-col" role="main">
        {{ content_for_layout }}
      </main>

      {% section 'footer' %}
    </div>

    <!-- Cart Drawer Section -->
    {% section 'cart-drawer' %}
  </body>
</html>
