{% comment %}
  Estelle Atelier - 404 Page Section
  Elegant 404 error page
{% endcomment %}

<div class="min-h-[60vh] flex flex-col items-center justify-center px-6 py-20">
  <div class="text-center max-w-2xl">
    <h1 class="text-text-olive-deep text-6xl md:text-8xl font-bold tracking-tight mb-6 serif">
      404
    </h1>
    {% if section.settings.show_label %}
      <span class="text-sage-dark text-sm font-bold uppercase tracking-[0.3em] mb-4 block">
        {{ section.settings.label_text }}
      </span>
    {% endif %}
    <h2 class="text-text-olive-deep text-2xl md:text-3xl font-light mb-6">
      {{ section.settings.heading }}
    </h2>
    <p class="text-muted text-lg mb-12">
      {{ section.settings.text }}
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a href="{{ routes.root_url }}" class="inline-flex items-center gap-2 bg-sage-dark text-white px-8 py-4 rounded-lg text-sm font-bold uppercase tracking-widest hover:bg-sage-accent hover:text-text-olive-deep transition-all">
        {{ section.settings.button_home_text }}
      </a>
      <a href="{{ collections.all.url }}" class="inline-flex items-center gap-2 border-2 border-text-olive-deep text-text-olive-deep px-8 py-4 rounded-lg text-sm font-bold uppercase tracking-widest hover:bg-text-olive-deep hover:text-white transition-all">
        {{ section.settings.button_shop_text }}
      </a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "404 Page",
  "tag": "section",
  "class": "section-404",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_label",
      "label": "Show label",
      "default": true
    },
    {
      "type": "text",
      "id": "label_text",
      "label": "Label text",
      "default": "Page Not Found"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Lost in the Atelier?"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "The page you're looking for doesn't exist or has been moved."
    },
    {
      "type": "text",
      "id": "button_home_text",
      "label": "Home button text",
      "default": "Back to Home"
    },
    {
      "type": "text",
      "id": "button_shop_text",
      "label": "Shop button text",
      "default": "Browse Collection"
    }
  ],
  "presets": [
    {
      "name": "404 Page",
      "category": "Page"
    }
  ]
}
{% endschema %}
