<section class="grid grid-cols-1 md:grid-cols-2 gap-0 border-b border-sage-accent/20">
  {%- for block in section.blocks -%}
    <div class="relative h-[700px] group overflow-hidden {% unless forloop.last %}border-r border-sage-accent/20{% endunless %}" {{ block.shopify_attributes }}>
      {%- if block.settings.image != blank -%}
        {{ block.settings.image | image_tag:
          loading: 'lazy',
          class: 'w-full h-full object-cover grayscale-[10%] group-hover:scale-105 transition-transform duration-[2000ms]',
          widths: '600, 900, 1200, 1600, 2400',
          sizes: '(max-width: 768px) 100vw, 50vw'
        }}
      {%- else -%}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'w-full h-full object-cover grayscale-[10%] group-hover:scale-105 transition-transform duration-[2000ms] bg-sage-pale' }}
      {%- endif -%}
      <div class="absolute inset-0 bg-black/10 group-hover:bg-black/20 transition-colors duration-700"></div>
      <div class="absolute inset-0 flex flex-col items-center justify-center text-white gap-4 text-center px-12">
        {%- if block.settings.subheading != blank -%}
          <span class="text-[10px] uppercase tracking-[0.5em] font-medium">{{ block.settings.subheading }}</span>
        {%- endif -%}
        {%- if block.settings.heading != blank -%}
          <h3 class="text-4xl serif italic">{{ block.settings.heading }}</h3>
        {%- endif -%}
        {%- if block.settings.text != blank -%}
          <p class="text-[10px] uppercase tracking-[0.2em] opacity-80 mt-2">{{ block.settings.text }}</p>
        {%- endif -%}
        {%- if block.settings.button_label != blank -%}
          <a class="mt-4 px-10 py-4 border border-white text-[9px] uppercase tracking-[0.4em] hover:bg-white hover:text-[var(--text-charcoal)] transition-all duration-700" href="{{ block.settings.button_link }}">
            {{ block.settings.button_label }}
          </a>
        {%- endif -%}
      </div>
    </div>
  {%- endfor -%}
</section>

{% schema %}
{
  "name": "Editorial Split",
  "max_blocks": 2,
  "blocks": [
    {
      "type": "split_item",
      "name": "Split Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Editorial Split",
      "blocks": [
        {
          "type": "split_item",
          "settings": {
            "subheading": "Seasonal Curation",
            "heading": "New Arrivals",
            "button_label": "Explore Edit"
          }
        },
        {
          "type": "split_item",
          "settings": {
            "subheading": "The Perfect Gift",
            "heading": "Atelier Gift Cards",
            "text": "Delivered in our signature embossed packaging or digital atelier invite",
            "button_label": "Shop Gift Cards"
          }
        }
      ]
    }
  ]
}
{% endschema %}
