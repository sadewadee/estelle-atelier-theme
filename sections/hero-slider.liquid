{%- style -%}
  .hero-{{ section.id }} {
    height: {{ section.settings.hero_height }};
  }
{%- endstyle -%}

<section class="hero-{{ section.id }} relative w-full flex items-center justify-center overflow-hidden bg-background-off animate-entrance delay-200">
  <div class="absolute inset-0 z-0">
    {%- if section.settings.image != blank -%}
      {{ section.settings.image | image_url: width: 2000 | image_tag:
        loading: 'eager',
        class: 'w-full h-full object-cover object-center opacity-95 grayscale-[10%]'
      }}
    {%- else -%}
      {{ 'lifestyle-2' | placeholder_svg_tag: 'w-full h-full object-cover object-center opacity-95 grayscale-[10%] bg-sage-pale' }}
    {%- endif -%}
  </div>
  <div class="relative z-10 text-center max-w-4xl px-6 flex flex-col items-center gap-8">
    <div class="flex flex-col items-center gap-6 animate-entrance delay-300">
      {%- if section.settings.subheading != blank -%}
        <span class="text-[10px] text-[var(--text-olive-deep)] font-medium tracking-[0.7em] uppercase">{{ section.settings.subheading }}</span>
      {%- endif -%}
      {%- if section.settings.heading != blank -%}
        <h2 class="text-[var(--text-charcoal)] text-6xl md:text-8xl font-normal serif italic leading-tight">{{ section.settings.heading }}</h2>
      {%- endif -%}
      {%- if section.settings.text != blank -%}
        <p class="text-[var(--text-olive-deep)] text-sm md:text-base font-light tracking-wide max-w-lg mx-auto leading-relaxed">
          {{ section.settings.text }}
        </p>
      {%- endif -%}
      {%- if section.settings.button_label != blank -%}
        <a href="{{ section.settings.button_link }}" class="inline-flex items-center justify-center min-w-[220px] h-14 bg-sage-pale border border-sage-accent text-[10px] uppercase tracking-[0.3em] font-medium luxury-hover text-[var(--text-charcoal)] mt-4">
          {{ section.settings.button_label }}
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Slider",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    },
    {
      "type": "select",
      "id": "hero_height",
      "label": "Hero Height",
      "options": [
        { "value": "70vh", "label": "Small" },
        { "value": "85vh", "label": "Medium" },
        { "value": "100vh", "label": "Full" }
      ],
      "default": "85vh"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "The Vernal Edit â€¢ 2024"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Quiet Botanicals"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "A curated selection of artisanal silhouettes, redefined in our signature pastel sage palette."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Explore Collection"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Slider"
    }
  ]
}
{% endschema %}
