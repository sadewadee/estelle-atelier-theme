{% comment %}
  Estelle Atelier - Main Blog Section
  Blog listing page
{% endcomment %}

<div class="px-6 md:px-12 py-16 md:py-24">
  <div class="max-w-[1800px] mx-auto">
    <!-- Blog Header -->
    {% if blog.title != blank %}
      <div class="text-center mb-12">
        <h1 class="text-text-olive-deep text-4xl md:text-5xl font-bold tracking-tight serif">
          {{ blog.title }}
        </h1>
        {% if blog.description != blank %}
          <p class="text-muted mt-4 max-w-2xl mx-auto">
            {{ blog.description }}
          </p>
        {% endif %}
      </div>
    {% endif %}

    <!-- Blog Posts Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-12">
      {% for article in blog.articles %}
        <article class="article-card group">
          <a href="{{ article.url }}" class="block">
            <!-- Article Image -->
            <div class="relative aspect-[16/10] rounded-xl overflow-hidden mb-6 bg-sage-pale/30">
              {% if article.image %}
                {{
                  article.image
                  | image_tag:
                    class: 'w-full h-full object-cover transition-transform duration-500 group-hover:scale-105',
                    loading: 'lazy',
                    widths: '400, 600, 800, 1200, 1600',
                    sizes: '(max-width: 768px) 100vw, (max-width: 1200px) 33vw, 25vw'
                }}
              {% else %}
                <div class="w-full h-full flex items-center justify-center">
                  <span class="material-symbols-outlined text-4xl text-sage-dark/20">article</span>
                </div>
              {% endif %}

              <!-- Date Badge -->
              <div class="absolute top-4 left-4">
                <div class="bg-white/90 backdrop-blur-sm px-4 py-2 rounded-lg text-center">
                  <span class="block text-2xl font-bold text-text-olive-deep leading-none">
                    {{ article.published_at | date: '%d' }}
                  </span>
                  <span class="block text-[10px] uppercase tracking-widest text-muted">
                    {{ article.published_at | date: '%b' }}
                  </span>
                </div>
              </div>
            </div>

            <!-- Article Content -->
            <div class="space-y-3">
              {% if article.tags.size > 0 and section.settings.show_tags %}
                <span class="text-sage-dark text-[10px] font-bold uppercase tracking-[0.2em]">
                  {{ article.tags.first }}
                </span>
              {% endif %}

              <h2 class="text-text-olive-deep text-xl font-bold serif line-clamp-2 group-hover:text-sage-dark transition-colors">
                {{ article.title }}
              </h2>

              {% if article.excerpt != blank and section.settings.show_excerpt %}
                <p class="text-muted text-sm line-clamp-2">
                  {{ article.excerpt }}
                </p>
              {% endif %}

              <span class="text-sage-dark text-sm font-medium flex items-center gap-2 group-hover:gap-4 transition-all">
                {{ 'blogs.article.read_more' | t | default: 'Read More' }}
                <span class="material-symbols-outlined text-lg">arrow_forward</span>
              </span>
            </div>
          </a>
        </article>
      {% endfor %}
    </div>

    <!-- Pagination -->
    {% if paginate.pages > 1 %}
      <nav class="mt-16 flex justify-center" role="navigation" aria-label="{{ 'general.pagination' | t }}">
        <ol class="flex gap-2">
          {% if paginate.previous %}
            <li>
              <a href="{{ paginate.previous.url }}" class="w-12 h-12 flex items-center justify-center border border-sage-accent/30 rounded-lg hover:bg-sage-pale transition-colors" aria-label="{{ 'general.pagination.previous' | t }}">
                <span class="material-symbols-outlined">chevron_left</span>
              </a>
            </li>
          {% endif %}

          {% for part in paginate.parts %}
            <li>
              {% if part.is_link %}
                <a href="{{ part.url }}" class="w-12 h-12 flex items-center justify-center border border-sage-accent/30 rounded-lg hover:bg-sage-pale transition-colors">
                  {{ part.title }}
                </a>
              {% elsif part.title == paginate.current_page %}
                <span class="w-12 h-12 flex items-center justify-center bg-sage-dark text-white rounded-lg">
                  {{ part.title }}
                </span>
              {% else %}
                <span class="w-12 h-12 flex items-center justify-center text-muted">
                  {{ part.title }}
                </span>
              {% endif %}
            </li>
          {% endfor %}

          {% if paginate.next %}
            <li>
              <a href="{{ paginate.next.url }}" class="w-12 h-12 flex items-center justify-center border border-sage-accent/30 rounded-lg hover:bg-sage-pale transition-colors" aria-label="{{ 'general.pagination.next' | t }}">
                <span class="material-symbols-outlined">chevron_right</span>
              </a>
            </li>
          {% endif %}
        </ol>
      </nav>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Blog Posts",
  "tag": "section",
  "class": "section-blog",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_tags",
      "label": "Show article tags",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_excerpt",
      "label": "Show article excerpt",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Blog Posts",
      "category": "Blog"
    }
  ]
}
{% endschema %}
