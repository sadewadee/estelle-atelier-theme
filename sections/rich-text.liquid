{% comment %}
  Estelle Atelier - Rich Text Section
  Simple content section for pages
{% endcomment %}

<div class="px-6 md:px-12 py-16 md:py-24">
  <div class="max-w-3xl mx-auto">
    <div class="prose prose-sage prose-lg max-w-none mx-auto">
      {{ section.settings.text }}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Rich Text",
  "tag": "section",
  "class": "section-rich-text",
  "settings": [
    {
      "type": "html",
      "id": "text",
      "label": "Content",
      "default": "<h2>Page Title</h2><p>Add your page content here.</p>"
    }
  ],
  "presets": [
    {
      "name": "Rich Text",
      "category": "Content"
    }
  ]
}
{% endschema %}
