{% comment %}
  Estelle Atelier - Map Section
  Stylized location map with store info card
{% endcomment %}

{% style %}
  .map-gradient-overlay {
    background: linear-gradient(to right, rgba(247, 248, 246, 0.4) 0%, rgba(247, 248, 246, 0) 100%);
  }
{% endstyle %}

<section class="relative w-full h-[500px] md:h-[600px] lg:h-[700px] flex items-center overflow-hidden">
  <!-- Map Background -->
  <div class="absolute inset-0 z-0">
    {% if section.settings.map_image %}
      {{ section.settings.map_image | image_tag:
        class: 'w-full h-full object-cover grayscale-[20%] sepia-[10%]',
        loading: 'lazy',
        widths: '750, 1000, 1500, 2000, 2500, 3000',
        sizes: '100vw'
      }}
    {% else %}
      <!-- Placeholder gradient background -->
      <div class="w-full h-full bg-gradient-to-br from-sage-pale via-sage-accent to-sage-dark/20"></div>
    {% endif %}

    <!-- Overlay -->
    <div class="absolute inset-0 map-gradient-overlay"></div>

    <!-- Map Marker -->
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 pointer-events-none">
      <div class="relative flex items-center justify-center">
        <div class="absolute w-12 h-12 bg-sage-dark/30 rounded-full animate-ping"></div>
        <div class="relative bg-sage-dark text-white w-10 h-10 rounded-full flex items-center justify-center shadow-xl border-2 border-white">
          <span class="material-symbols-outlined text-xl font-bold">location_on</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Store Info Card -->
  <div class="relative z-10 w-full max-w-7xl mx-auto px-6 md:px-12 lg:px-20 pointer-events-none">
    <div class="max-w-md pointer-events-auto">
      <div class="bg-white/95 backdrop-blur-sm p-8 md:p-10 rounded-xl shadow-[0_20px_50px_rgba(0,0,0,0.1)] border border-black/5">
        <!-- Store Identity -->
        <div class="mb-8">
          {% if section.settings.store_label %}
            <span class="text-xs uppercase tracking-[0.2em] text-sage-dark font-semibold mb-2 block">{{ section.settings.store_label }}</span>
          {% endif %}
          <h2 class="serif text-3xl md:text-4xl text-text-olive-deep leading-tight">{{ section.settings.store_name }}</h2>
          <div class="h-px w-12 bg-sage-dark mt-4"></div>
        </div>

        <!-- Location & Details -->
        <div class="space-y-6 mb-10">
          <div class="flex items-start gap-4">
            {% render 'icon', icon: 'map', size: 'lg', class: 'text-muted mt-1' %}
            <div>
              <p class="text-text-olive-deep font-medium mb-1">{{ section.settings.address_title }}</p>
              <p class="text-muted text-sm leading-relaxed">
                {{ section.settings.address }}
              </p>
            </div>
          </div>

          <div class="flex items-start gap-4">
            {% render 'icon', icon: 'schedule', size: 'lg', class: 'text-muted mt-1' %}
            <div>
              <p class="text-text-olive-deep font-medium mb-1">{{ section.settings.hours_title }}</p>
              <div class="text-muted text-sm space-y-1">
                <div class="flex justify-between gap-8">
                  <span>{{ section.settings.weekdays }}</span>
                  <span>{{ section.settings.weekday_hours }}</span>
                </div>
                <div class="flex justify-between gap-8">
                  <span>{{ section.settings.saturday }}</span>
                  <span>{{ section.settings.saturday_hours }}</span>
                </div>
                <div class="flex justify-between gap-8 opacity-50">
                  <span>{{ section.settings.sunday }}</span>
                  <span>{{ section.settings.sunday_hours }}</span>
                </div>
              </div>
            </div>
          </div>

          {% if section.settings.show_phone %}
            <div class="flex items-start gap-4">
              {% render 'icon', icon: 'phone', size: 'lg', class: 'text-muted mt-1' %}
              <div>
                <p class="text-text-olive-deep font-medium mb-1">{{ section.settings.phone_title }}</p>
                <p class="text-muted text-sm">{{ section.settings.phone_number }}</p>
              </div>
            </div>
          {% endif %}
        </div>

        <!-- Get Directions CTA -->
        <a href="{{ section.settings.directions_link }}" class="group flex items-center justify-center w-full bg-sage-dark text-white font-semibold py-4 rounded-lg transition-all hover:shadow-lg hover:shadow-sage-dark/20 active:scale-[0.98]">
          <span class="mr-2">{{ section.settings.button_text }}</span>
          <span class="material-symbols-outlined text-lg transition-transform group-hover:translate-x-1">arrow_forward</span>
        </a>
      </div>
    </div>
  </div>

  <!-- Navigation Controls (Visual) -->
  {% if section.settings.show_zoom_controls %}
    <div class="absolute bottom-8 right-8 z-10 flex flex-col gap-2 pointer-events-none opacity-50">
      <div class="bg-white p-2 rounded shadow-sm">
        <span class="material-symbols-outlined text-xl">add</span>
      </div>
      <div class="bg-white p-2 rounded shadow-sm border-t border-gray-100">
        <span class="material-symbols-outlined text-xl">remove</span>
      </div>
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Store Map",
  "tag": "section",
  "class": "section-store-map",
  "settings": [
    {
      "type": "image_picker",
      "id": "map_image",
      "label": "Map background image"
    },
    {
      "type": "header",
      "content": "Store Info"
    },
    {
      "type": "text",
      "id": "store_label",
      "label": "Store label",
      "default": "Flagship Store"
    },
    {
      "type": "text",
      "id": "store_name",
      "label": "Store name",
      "default": "La Maison Sage"
    },
    {
      "type": "text",
      "id": "address_title",
      "label": "Address title",
      "default": "Our Boutique"
    },
    {
      "type": "textarea",
      "id": "address",
      "label": "Address",
      "default": "123 Rue du Faubourg Saint-Honoré\n75008 Paris, France"
    },
    {
      "type": "text",
      "id": "hours_title",
      "label": "Hours title",
      "default": "Opening Hours"
    },
    {
      "type": "text",
      "id": "weekdays",
      "label": "Weekdays label",
      "default": "Mon – Fri"
    },
    {
      "type": "text",
      "id": "weekday_hours",
      "label": "Weekdays hours",
      "default": "10:00 – 19:00"
    },
    {
      "type": "text",
      "id": "saturday",
      "label": "Saturday label",
      "default": "Saturday"
    },
    {
      "type": "text",
      "id": "saturday_hours",
      "label": "Saturday hours",
      "default": "11:00 – 18:00"
    },
    {
      "type": "text",
      "id": "sunday",
      "label": "Sunday label",
      "default": "Sunday"
    },
    {
      "type": "text",
      "id": "sunday_hours",
      "label": "Sunday hours",
      "default": "Closed"
    },
    {
      "type": "checkbox",
      "id": "show_phone",
      "label": "Show phone number",
      "default": true
    },
    {
      "type": "text",
      "id": "phone_title",
      "label": "Phone title",
      "default": "Contact"
    },
    {
      "type": "text",
      "id": "phone_number",
      "label": "Phone number",
      "default": "+33 1 23 45 67 89"
    },
    {
      "type": "header",
      "content": "CTA Button"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Get Directions"
    },
    {
      "type": "url",
      "id": "directions_link",
      "label": "Google Maps link"
    },
    {
      "type": "header",
      "content": "Options"
    },
    {
      "type": "checkbox",
      "id": "show_zoom_controls",
      "label": "Show zoom controls",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Store Map",
      "category": "Store"
    }
  ]
}
{% endschema %}
