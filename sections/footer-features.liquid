{% comment %}
  Estelle Atelier - Footer Features Section
  Value propositions bar with icons and text
{% endcomment %}

<div class="bg-[var(--color-sage-pale)] border-t border-b border-[var(--text-olive-deep)]/5 py-12 md:py-16">
  <div class="max-w-[1800px] mx-auto px-6">
    {% if section.settings.show_heading %}
      <div class="flex flex-col items-center mb-12">
        <h4 class="text-[var(--sage-dark)] text-xs font-bold uppercase tracking-[0.3em] text-center">
          {{ section.settings.heading }}
        </h4>
        <div class="h-px w-12 bg-sage-dark/40 mt-2"></div>
      </div>
    {% endif %}

    <div class="grid grid-cols-1 md:grid-cols-{{ section.settings.columns }} gap-8 md:gap-0">
      {% for block in section.blocks %}
        <div class="flex flex-col items-center text-center px-8 {% if forloop.index != section.settings.columns %}md:border-r border-[var(--text-olive-deep)]/10{% endif %} last:border-r-0 group" {{ block.shopify_attributes }}>
          <div class="mb-6 text-[var(--sage-dark)] transition-transform duration-500 group-hover:scale-110">
            {% render 'icon-svg', icon: block.settings.icon %}
          </div>
          <div class="flex flex-col gap-2">
            <h2 class="text-[var(--text-olive-deep)] text-xl font-medium leading-tight serif">
              {{ block.settings.title }}
            </h2>
            <p class="text-muted text-sm font-normal leading-relaxed max-w-[240px] mx-auto">
              {{ block.settings.description }}
            </p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Footer Features",
  "tag": "section",
  "class": "section-footer-features",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_heading",
      "label": "Show heading",
      "default": true
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Commitments"
    },
    {
      "type": "range",
      "id": "columns",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3,
      "label": "Columns"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon",
          "default": "local_shipping",
          "info": "Material Symbols Outlined icon name"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Complimentary Shipping"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Enjoy premium delivery on all orders over $200, worldwide."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer Features",
      "category": "Footer",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "icon": "local_shipping",
            "title": "Complimentary Shipping",
            "description": "Enjoy premium delivery on all orders over $200, worldwide."
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "lock",
            "title": "Secure Checkout",
            "description": "Every transaction is encrypted for your privacy and security."
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "eco",
            "title": "Conscious Craft",
            "description": "Ethically manufactured with sustainably sourced materials."
          }
        }
      ]
    }
  ]
}
{% endschema %}
